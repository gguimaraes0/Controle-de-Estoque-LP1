@model MainViewModel

<form>
    <div class="row">
        <label>Registro de Venda</label>
    </div>

    <div class="row">
        <div class="col-2">
            <label>Codigo do Fornecedor</label>
        </div>
        <div class="col-3">
            <input type="text" asp-for="compraVenda.CodigoFornecedor" />
        </div>
    </div>

    <div class="row">
        <div class="col-2">
            <label>Codigo do Cliente</label>
        </div>
        <div class="col-3">
            <input type="text" asp-for="compraVenda.CodigoCliente" />
        </div>
    </div>

    <div class="row">
        <div class="col-2">
            <label>Codigo do usuário</label>
        </div>
        <div class="col-3">
            <input type="text" asp-for="compraVenda.CodigoUsuario" />
        </div>
    </div>

    <div class="row">
        <div class="col-2">
            <label>Codigo do Produto</label>
        </div>
        <div class="col-3">
            <input type="text" asp-for="compraVenda.CodigoProduto" />
        </div>
    </div>

    <div class="row">
        <div class="col-2">
            <label>Quantidade</label>
        </div>
        <div class="col-3">
            <input type="text" asp-for="compraVenda.Quantidade" />
        </div>
    </div>

    <div class="row">
        <div class="col-2">
            <label>Data da Venda</label>
        </div>
        <div class="col-3">
            <input type="text" asp-for="compraVenda.Data" placeholder="dd/mm/aaaa" onkeydown="fMasc(this, mData);" />
        </div>
    </div>

    <input type="submit" value="Cadastrar" />

</form>